--header 'content_type: application/x-www-form-urlencoded' \
--header 'client_ID: {{client_ID}}' \
--header 'client_secret: {{client_secret}}' \
--header 'resource_ID: {{resource_ID}}' \
--header 'AAD_instance: {{AAD_instance}}' \
